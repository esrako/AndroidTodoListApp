<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.todolist.EditItemActivity"
    android:id="@+id/title_activity_edit_item">

    <TextView android:text="@string/edit_item_below" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Edit_below_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonSaveItem"
        android:layout_below="@+id/Edit_below_text"
        android:layout_alignRight="@+id/Edit_below_text"
        android:layout_alignEnd="@+id/Edit_below_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Save_button"
        android:id="@+id/buttonSaveItem"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
